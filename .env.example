# Firebase Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Basic Firebase Config (from Firebase Console > Project Settings)
FIREBASE_API_KEY=your-api-key-here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_API_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (for server-side)
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Optional: Test user credentials
FIREBASE_USER=test@example.com
FIREBASE_USER_PW=your-test-password

# Other API tokens
APIFY_ACCESS_TOKEN=your-apify-token-here